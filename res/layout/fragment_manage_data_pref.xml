<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Manage Data Preferences"
        android:textColor="@color/green"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/data_pref_receipt_no_selection_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/lightgray"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageview_data_pref_receipt_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/icon_receipt_64" />

            <TextView
                android:id="@+id/textview_receipt_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Receipt Number"
                android:textColor="@color/dark"
                android:textSize="12sp" />

            <View
                android:id="@+id/indicator_data_pref_receipt_no"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/green" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/data_pref_camera_selection_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/lightgray"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageview_data_pref_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/icon_camera_64" />

            <TextView
                android:id="@+id/textview_data_pref_camera_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Photo of Receipt"
                android:textColor="@color/dark"
                android:textSize="12sp" />

            <View
                android:id="@+id/indicator_data_pref_camera"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/dark" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_data_pref_submit"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:background="@drawable/button_green"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>