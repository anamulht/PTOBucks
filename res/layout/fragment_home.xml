        </LinearLayout>

        <TextView
            android:id="@+id/voucher_delivery_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/business_details_layout"
            android:layout_marginTop="20dp"
            android:paddingLeft="5dp"
            android:text="Voucher Delivery Options"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/voucher_delivery_layout_I"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/voucher_delivery_text"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_view_email_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@color/lightgray"
                    android:clickable="true"
                    android:drawableTop="@drawable/icon_email"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onClick"
                    android:padding="5dp"
                    android:text="Email"
                    android:textColor="@color/dark"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/dark_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_view_sms_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@color/lightgray"
                    android:clickable="true"
                    android:drawableTop="@drawable/icon_sms"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5dp"
                    android:text="SMS"
                    android:textColor="@color/dark"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/dark_gray" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/voucher_delivery_layout_II"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/voucher_delivery_layout_I"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_view_username_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@color/lightgray"
                    android:clickable="true"
                    android:drawableTop="@drawable/icon_username"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5dp"
                    android:text="Username"
                    android:textColor="@color/dark"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/dark_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_view_qr_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@color/lightgray"
                    android:clickable="true"
                    android:drawableTop="@drawable/icon_qr"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5dp"
                    android:text="QR Code"
                    android:textColor="@color/dark"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/dark_gray" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>